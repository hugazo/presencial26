<div class="row">
  <div class="container">
    <div class="col-md-6">
      <h1>No completados :(</h1>
      <% @not_completed.each do |todo| %>
        <%= render 'todo_short', todo: todo %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1>Completados!! :)</h1>
      <% @completed.each do |todo| %>
        <%= render 'todo_short', todo: todo %>
      <% end %>
    </div>
  </div>
</div>
